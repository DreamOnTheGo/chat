                a(href="../register")
                    button#wantreg(type="button") 注册账号
    script(src="/javascripts/jquery-1.11.2.js")
    script(src="/javascripts/socket.io.js")
    script(src="/javascripts/login.js")
    script(src="/javascripts/rem.js")